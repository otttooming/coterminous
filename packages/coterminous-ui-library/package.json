{
  "name": "@coterminous/ui-library",
  "version": "1.0.0",
  "description": "Reusable components for React projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/otttooming/@coterminous/ui-library.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "webpack-dev-server",
    "docs": "NODE_ENV=production webpack -p",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build": "tsc -p tsconfig.dist.json",
    "clean": "rm -rf dist",
    "dist": "npm run clean && npm run build",
    "lint": "npm run tslint && echo 'tslint check: OK'",
    "tslint": "tslint --project ./tsconfig.json",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:update": " jest -u"
  },
  "author": "Ott Tooming",
  "license": "ISC",
  "peerDependencies": {
    "downshift": "^2.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-popper": "^1.0.0",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "4.1.3",
    "@storybook/react": "4.1.3",
    "@types/babel-core": "6.25.5",
    "@types/enzyme": "3.1.15",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/enzyme-to-json": "1.5.2",
    "@types/jest": "23.3.10",
    "@types/prettier": "1.15.2",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "@types/storybook__addon-knobs": "4.0.0",
    "@types/storybook__react": "4.0.0",
    "babel-core": "6.26.3",
    "downshift": "^3.1.8",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "enzyme-to-json": "3.3.5",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "prettier": "1.15.3",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-popper": "1.3.2",
    "source-map-loader": "0.2.4",
    "styled-components": "4.1.3",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.2",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-loader": "3.6.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "3.6.0",
    "typescript": "3.2.2",
    "utility-types": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "@coterminous/ui-library": "<rootDir>/src/index.ts"
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "verbose": true,
    "bail": false,
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/src/common/testHelpers/setupTestFrameworkScriptFile.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
